{
  "compilerOptions": {
    "lib": ["dom", "es5", "es6", "es7"],
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",

    "experimentalDecorators": true,

    "removeComments": true,
    "preserveConstEnums": true,

    "sourceMap": true,

    "declaration": true,

    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  }
}
